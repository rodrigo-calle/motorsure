---
import MainButton from "../mainButton/MainButton.astro";

---

<nav class="main-menu__container" id="home">
    <div class="logo-container">
        <img src="https://res.cloudinary.com/dakexlsnu/image/upload/v1673569327/motorsure/image_6_r9jnho.png" alt="logo Motorsure">
    </div>
    <div class="options-container">
        <ul class="option-list">
            <a class="menu-link" href="#services"><li class="menu-option">Servicios</li></a>
            <a class="menu-link"href="#permissions"><li class="menu-option">Permisos</li></a>
            <a class="menu-link"href="#contact"><li class="menu-option">Contacto</li></a>
            <a class="menu-link"href="#about-us"><li class="menu-option">Nosotros</li></a>
        </ul>
    </div>
    <div class="contact-btn-container">
        <MainButton title="contÃ¡ctanos"/>
    </div>

</nav>

<style>
    .main-menu__container {
        height: 140px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        width: 85%;
        margin: 0 auto;
    }

    .logo-container {
        width: 231px;
        height: 33.39px;
    }

    .logo-container img {
        width: 100%;
        height: 100%;
    }

    .options-container {
        width: 568px;
    }
    .option-list {
        display: flex;
        flex-direction: row;
        width: 100%;
        justify-content: space-between;
        list-style: none;
        padding: 0;
    }

    .menu-link {
        color: #000;
        text-decoration: none;
    }
    .menu-option {
        font-size: 24px;
        font-weight: 700;
        line-height: 29px;
    }

    @media only screen and (max-width: 1280px) {
        .main-menu__container {
            height: 128px;
        }
        .logo-container {
            width: 175px;
            height: 25.39px;
        }
        .menu-option {
            font-size: 20px;
            font-weight: 700;
            line-height: 29px;
        }
        .options-container {
            width: 461px;
        }
    }

    @media only screen and (max-width: 1040px) {

        .main-menu__container {
            height: 140px;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            width: 90%;
            margin: 0 auto;
        }

        .options-container {
            width: 430px;
        }

    }

    @media only screen and (max-width: 800px) {
        .logo-container {
            width: 100%;
            height: 60px;
            display: flex;
            flex-direction: row;
            justify-content: center;
        }

        .logo-container img {
            width: fit-content;
        }   
        .menu-option {
            display: none;
            width: 0px;
        }

        .options-container {
            width: 0px;
        }
        .contact-btn-container {
            display: none;
            width: 0px;

        }
    }

    @media only screen and (max-width: 500px) {
        .main-menu__container {
            height: 55px;
        }
        .logo-container {
            width: 100%;
            height: 25.39px;
            display: flex;
            flex-direction: row;
            justify-content: center;
        }

        .logo-container img {
            width: fit-content;
        }
        .menu-option {
            display: none;
            width: 0px;
        }
        .options-container {
            width: 0px;
        }
        .contact-btn-container {
            display: none;
            width: 0px;

        }
    }

</style>