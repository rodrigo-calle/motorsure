---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import MainMenu from '../components/mainMenu/MainMenu.astro';
import MainBanner from '../components/mainBanner/MainBanner.astro';
import Index from '../components/services/Index.astro';
import Schedule from '../components/schedule/Schedule.astro';
import About from '../components/about/About.astro';
import Sentence from '../components/sentence/Sentence.astro';
import Permissions from '../components/permissions/Permissions.astro';
import Contact from '../components/contact/Contact.astro';
import Maps from '../components/maps/Maps.astro';
import Footer from '../components/footer/Footer.astro';
import BurguerButton from '../components/burguerButton/BurguerButton.astro';
import MenuList from '../components/burguerButton/MenuList.astro';
import RowUp from '../components/rowUp/RowUp.astro';
import PhoneButton from '../components/phoneButton/PhoneButton.astro';
---

<Layout title="Motorsure">
	<BurguerButton />
	<RowUp />
	<PhoneButton />
	<MenuList />
	<header>
		<MainMenu />
		<MainBanner />
	</header>
	<main>
		<Index />
		<Schedule />
		<About />
		<Sentence />
		<Permissions />
		<div class="separator-line" />
		<Contact />
		<Maps />
	</main>
	<footer>
		<Footer />
	</footer>
</Layout>

<style>
	body {
		margin: 0;
		padding: 0;
	}
	main {
		height: 100%;
		width: 100%;
		margin: 0;
		padding: 0;
	}
	.separator-line {
		background-color: #9FC5E8;
		width: 100%;
		height: 6px;
	}
</style>
