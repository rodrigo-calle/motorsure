---
export interface Props {
    title: string;
};

const { title } = Astro.props;
---

<button class="main-button">
    {title.toUpperCase()}
</button>
<style>
    .main-button {
        background-color: #9FC5E8;
        color: #fff;
        text-align: center;
        width: 251px;
        height: 61px;
        border: none;
        border-radius: 9px;
        font-size: 24px;
        font-weight: bold;
        cursor: pointer;
    }   
    
    @media only screen and (max-width: 1024px) {
        
        .main-button {
            background-color: #9FC5E8;
            color: #fff;
            text-align: center;
            width: 174px;
            height: 51px;
            border: none;
            border-radius: 9px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
        }  
    
    }
    
</style>