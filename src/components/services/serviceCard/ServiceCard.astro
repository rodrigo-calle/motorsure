---
export interface Props {
    title: string;
    image: string;
}

const { title, image } = Astro.props;
---

<div class="service-card">
    <div class="image-container">
        <img src={image} alt={title}>
    </div>
    <div class="service-title-container">
        <p>{title}</p>
    </div>
</div>

<style>
    .service-card {
        border: 2px solid #D9D9D9;
        width: 389px;
        height: 352px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    .image-container {
        height: 129px;
        width: 129px;
    }
    .image-container img {
        width: 100%;
        height: 100%;
    }
    .service-title-container {
        width: 347px;
        font-size: 24px;
        font-weight: 700;
        line-height: 27px;
        text-align: center;
        margin: 0px;
    }
</style>